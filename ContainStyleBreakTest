+    <div class="b-before"> </div>
+  </div>
+  <div class="container">
+    <div class="b-before"> </div>
+  </div>
+  <div class="container">
+    <div class="b-after"> </div>
+  </div>
+  <div class="container">
+    <div class="b-after"> </div>
+  </div>
