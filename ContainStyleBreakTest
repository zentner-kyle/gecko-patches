+++ b/layout/reftests/w3c-css/submitted/contain/contain-style-break-002.html
@@ -0,0 +1,62 @@
+<!DOCTYPE HTML>
+<html class="reftest-wait">
+<head>
+  <meta charset="utf-8">
+  <title>CSS Test: 'contain: style' causes page-break-* to be ignored on
+    dynamically inserted descendants.</title>
+  <link rel="author" title="Kyle Zentner" href="mailto:kzentner@mozilla.com">
+  <link rel="help" href="http://www.w3.org/TR/css-containment-1/#containment-style">
+  <link rel="match" href="contain-style-break-001-ref.html">
+  <style>
+  body {
+    margin: 0;
+  }
+  .container {
+    contain: style;
+    width: 20em;
+    height: 10em;
+    background: orange;
+    border: 1em solid black;
+    margin: 1em;
+  }
+  .b-after {
+    page-break-after: always;
+    width: 20em;
+    height: 10em;
+  }
+  .b-before {
+    page-break-before: always;
+    width: 20em;
+    height: 10em;
+  }
+  </style>
+  <script id="b-before-template" type="template">
+    <div>
+      <div class="b-before"> </div>
+    </div>
+  </script>
+  <script>
+    function doTest() {
+      var containers = document.getElementsByClassName('container');
+      var toInsert = document.getElementById('b-before-template').textContent;
+      for (var idx in containers) {
+        var container = containers[idx];
+        containers.innerHTML = toInsert;
+      }
+      document.documentElement.classList.remove("reftest-wait");
+    }
+  </script>
+</head>
+<body class="reftest-paint" onload="doTest()">
+  <div class="container"> </div>
+  <div class="container"> </div>
+  <div class="container"> </div>
+  <div class="container"> </div>
+  <div class="container"> </div>
+  <div class="container"> </div>
+  <div class="container"> </div>
+  <div class="container"> </div>
+  <div class="container"> </div>
+  <div class="container"> </div>
+</body>
+</html>
