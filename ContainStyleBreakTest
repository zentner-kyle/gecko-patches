+<!DOCTYPE HTML>
+<html class="reftest-print reftest-wait">
+<head>
+  <meta charset="utf-8">
+  <title>'page-break-before: always' in child of 'contain: style' element should be ignored </title>
+  <link rel="author" title="Kyle Zentner" href="mailto:zentner.kyle@gmail.com">
+  <link rel="help" href="http://www.w3.org/TR/css-containment-1/#containment-style">
+  <link rel="match" href="contain-style-break-002-ref.html">
+  <style>
+  body {
+    margin: 0;
+  }
+  .buffer {
+    height: 100px;
+    width: 100px;
+    background: blue;
+  }
+  .container {
+    width: 100px;
+    height: 80px;
+    background: orange;
+    contain: style;
+  }
+  .b-before {
+    page-break-before: always;
+    background: green;
+    width: 100px;
+    height: 20px;
+  }
+  </style>
+  <script>
+    function buildSubtree(innerClassName) {
+      var outerDiv = document.createElement("div");
+      var innerDiv = document.createElement("div");
+      innerDiv.classList.add(innerClassName);
+      outerDiv.appendChild(innerDiv);
+      return outerDiv;
+    }
+    function doTest() {
+      var containers = document.getElementsByClassName('container');
+      containers[0].appendChild(buildSubtree('b-before'));
+      document.documentElement.classList.remove("reftest-wait");
+    }
+  </script>
+</head>
+<body onload="doTest()">
+  <div class="buffer"></div>
+  <div class="container"></div>
+</body>
+</html>
