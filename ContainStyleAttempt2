+nsCounterNode *
+nsCounterList::GetLastNodeOfFrameWithType(nsIFrame *aFrame,
+                                          nsCounterNode::Type aType)
+{
+    nsCounterNode *node = First();
+    do {
+      if (node->mType == aType && node->mPseudoFrame == aFrame) {
+        return node;
+      }
+    } while ((node = Prev(node)) != First());
+    return nullptr;
+}
