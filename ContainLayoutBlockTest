+    margin: 0;
+  }
+  .container {
+    contain: layout;
+    display: inline-block;
+    background: red;
+    border: 1em solid green;
+  }
+  .right-float {
+    float: right;
+    background: blue;
+    width: 20px;
+    height: 20px;
+  }
+  .left-float {
+    float: left;
+    background: orange;
+    width: 20px;
+    height: 20px;
+  }
+  </style>
+</head>
+<body>
+  <div class="container">
+    <div class="right-float"></div>
+    This text should not affect the size of the container.
+    <div class="left-float"></div>
+  </div>
+</body>
+</html>
