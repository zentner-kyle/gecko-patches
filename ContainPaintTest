+<!DOCTYPE HTML>
+<html>
+<head>
+  <meta charset="utf-8">
+  <style>
+  body {
+    margin: 0;
+  }
+  .root {
+    contain: paint;
+    width: 100px;
+    height: 100px;
+    background: green;
+    margin: 25px;
+    padding: 25px;
+    padding-width: 0;
+  }
+  .a {
+    width: 100px;
+    height: 100px;
+    background: red;
+  }
+  .b {
+    width: 100px;
+    height: 200px;
+    background: red;
+  }
+  .c {
+    width: 100px;
+    height: 100px;
+    background: green;
+  }
+  .background {
+    position: absolute;
+    top: -50px;
+    left: -50px;
+    width: 225px;
+    height: 300px;
+    background: red;
+    z-index: -1;
+  }
+  </style>
+</head>
+<body>
+  <div class="root">
+    <div class="b">
+      <div class="c"> </div>
+      <div class="a"> </div>
+      <div class="background"> </div>
+    </div>
+  </div>
+</body>
+</html>
