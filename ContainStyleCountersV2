+
+public:
+  static
+  nsIFrame* FindStyleRoot(nsIFrame* aDescendant) {
+    nsIFrame* ancestor = aDescendant;
+    while (ancestor && !ancestor->StyleDisplay()->IsContainStyle()) {
+      ancestor = ancestor->GetParent();
+    }
+    return ancestor;
+  }
