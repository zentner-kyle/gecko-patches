-        dirty |= AddResetOrIncrement(aFrame, i,
+        dirty |= AddResetOrIncrement(aRoot, aFrame, i,
                                      styleContent->GetCounterIncrementAt(i),
                                      nsCounterChangeNode::INCREMENT);
     return dirty;
 }
 
